---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<BaseLayout title='Blog'>
  <main class='w-lvw px-5 md:px-20 lg:px-32 xl:px-40'>
    <section>
      <ul class='flex flex-wrap gap-8 list-none m-0 p-0;'>
        {
          posts.map((post) => (
            <li class='w-1/2 md:w-full'>
              <a class='block' href={`/blog/${post.slug}/`}>
                <img
                  class='mb-2 rounded-lg w-72 h-36'
                  src={post.data.heroImage.src}
                  alt={post.data.heroImage.alt}
                />
                <h4 class='sub'>{post.data.title}</h4>
                <h4 class='sub'>{post.data.author}</h4>
                <p class='date'>
                  <FormattedDate date={post.data.pubDate} />
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</BaseLayout>

<style>
  ul li * {
    @apply no-underline transition ease-200;
  }
  ul li:first-child {
    @apply w-full mb-4 text-center;
  }
  ul li:first-child img {
    @apply w-full;
  }
  ul li:first-child .sub {
    @apply text-3xl;
  }
  .sub {
    @apply m-0 text-black line-height-1;
  }
  .date {
    @apply m-0 text-gray;
  }
  ul li a:hover h4,
  ul li a:hover .date {
    @apply text-accent;
  }
  ul a:hover img {
    @apply shadow;
  }
  @media (max-width: 720px) {
    ul {
      @apply gap-2;
    }
    ul li {
      @apply w-full text-center;
    }
    ul li:first-child {
      @apply mb-0;
    }
    ul li:first-child .sub {
      @apply text-lg;
    }
  }
</style>
