---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import NewTechStack from '../components/NewTechStack.md';
import About from '../texts/About.mdx';
import Contact from '../texts/Contact.mdx';
import Projects from '../components/Projects.astro';
---

<BaseLayout title=`Mickey's Portfolio`>
  <!-- TODO: Check issue with fade transition -->
  <main class='w-lvw grid px-5 md:px-20 lg:px-32 xl:px-40'>
    <section class='mb-80 mt-40 pt-20 place-self-center'>
      <Image
        src='/mickeymarse.png'
        alt='The handle @mickeymarse written in a mono font with two horizontal arrows pointing opposite directions respectively on top and bottom.'
        width='700'
        height='700'
        class='motion-safe:animate-pulse'
      />
    </section>
    <a href='/#work' class='mb-60 place-self-center'>
      <Icon
        name='mdi:chevron-down'
        title='Neon pink chevron arrow down icon.'
        class='text-neonp size-20 motion-safe:animate-pulse'
      />
    </a>

    <section id='work' class='mb-24 mt-40 grid'>
      <header class='section-header mb-24'>
        <p>Projects</p>
      </header>
      <article>
        <Projects />
      </article>
    </section>
    <section class='mt-24 grid'>
      <header class='section-header'>
        <p>Tech Stack</p>
      </header>
      <NewTechStack />
    </section>
    <section id='about' class='mt-24 grid'>
      <header class='section-header'>
        <p>Who Am I</p>
      </header>
      <About />
    </section>
    <section id='contact' class='mb-24 grid'>
      <header class='section-header'>
        <p>Contact</p>
      </header>
      <Contact />
    </section>
  </main>
</BaseLayout>

<style>
  .section-header {
    @apply text-xl md:text-2xl lg:text-3xl xl:text-4xl 2xl:text-5xl font-sans font-bold place-self-end;
  }
</style>
