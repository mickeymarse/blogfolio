---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <main>
    <article>
      <figure>
        {heroImage && <img src={heroImage.src} alt={heroImage.alt} />}
        {heroImage && <figcaption>{heroImage.alt}</figcaption>}
      </figure>
      <section aria-label='Section containing the text of the blog post.'>
        <section aria-label='Section containing the title of the blog post.'>
          <section aria-label='Section containing the published date of the blog post.'>
            {pubDate}
          </section>
          <h1>{title}</h1>
          <hr />
        </section>
        <slot />
      </section>
    </article>
  </main>
</BaseLayout>
