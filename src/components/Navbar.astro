<style>
  .navlink {
    @apply rounded border-4 border-transparent hover:bg-neonp hover:text-back;
  }
</style>

<script>
  window.onscroll = () => {
    const nav = document.getElementById('navbar');
    if (nav !== null) {
      if (window.scrollY <= 10) {
        if (nav.classList.contains('bg-back')) {
          nav.classList.remove('bg-back');
          nav.classList.add('bg-transparent');
        }
      } else {
        if (!nav.classList.contains('bg-back')) {
          nav.classList.remove('bg-transparent');
          nav.classList.add('bg-back');
        }
      }
    }
  };
</script>
