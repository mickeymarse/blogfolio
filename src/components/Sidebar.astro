---
import { Icon } from 'astro-icon/components';
---

<Icon
  name='mdi:microsoft-xbox-controller-menu'
  title='Burger menu icon'
  id='burger'
  class='md:hidden size-16 text-neonp sticky top-5 left-5'
/>
<Icon
  name='mdi:alpha-x-circle'
  title='X icon'
  id='x'
  class='hidden md:hidden size-16 text-neonp sticky top-5 left-5'
/>
<aside id='sidebar' class='hidden'>ciao</aside>
<!-- TODO: Add type definitions for jQuery -->
<script>
  $('#burger, #x').on('click', () => {
    $('#sidebar, #burger, #x').toggle();
  });
</script>
