---
import ProjectsLayout from '../../layouts/ProjectsLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import tma from '../../../public/tarmarapi.png';

const layoutProps = {
  imageHref: 'https://tarmarapi.fly.dev/',
  projectTitle: 'TarMarApi (alpha)',
  projectParagraph: 'An API for the classic Tarot de Marseille built with Bun.',
  firstIconHref: 'https://github.com/mickeymarse/tarmarapi',
};
---

<ProjectsLayout
  imageHref={layoutProps.imageHref}
  projectTitle={layoutProps.projectTitle}
  projectParagraph={layoutProps.projectParagraph}
  firstIconHref={layoutProps.firstIconHref}
>
  <Image
    slot='project-image'
    src={tma}
    alt='Canva logo of tarot cards sprouting from two ethereal hands behind the name TARMARAPI. Two Tron-like partial frames surround the composition.'
    class='image-style'
  />
  <Icon
    slot='first-icon'
    name='simple-icons:github'
    title='Neon pink version of the Github logo.'
    class='icon-style'
  />
</ProjectsLayout>
