---
import ProjectsLayout from '../../layouts/ProjectsLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import readingRoom from '../../../public/RR.png';

const layoutProps = {
  imageHref: 'https://reading-room-app.vercel.app/',
  projectTitle: 'Reading Room',
  projectParagraph:
    'Reading Room helps educators and parents guide children in developing healthy reading habits.',
  firstIconHref: 'https://github.com/SchoolOfCode/Reading-Room-App',
  secondIconHref: 'https://www.youtube.com/watch?v=Cjjdsl9NvZU',
};
---

<ProjectsLayout
  imageHref={layoutProps.imageHref}
  projectTitle={layoutProps.projectTitle}
  projectParagraph={layoutProps.projectParagraph}
  firstIconHref={layoutProps.firstIconHref}
  secondIconHref={layoutProps.secondIconHref}
>
  <Image
    slot='project-image'
    src={readingRoom}
    alt='Screenshot of the login page of the Reading Room app in mobile and desktop views on a gradient pink background.'
    class='image-style'
  />
  <Icon
    slot='first-icon'
    name='ph:github-logo-light'
    title='Neon green minimalist version of the Github logo.'
    class='icon-style'
  />
  <Icon
    slot='second-icon'
    name='ph:youtube-logo-light'
    title='Neon green minimalist version of the Youtube logo.'
    class='icon-style'
  />
</ProjectsLayout>
