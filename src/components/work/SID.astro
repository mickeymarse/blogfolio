---
import ProjectsLayout from '../../layouts/ProjectsLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import sid from '../../../public/21SID.png';

const layoutProps = {
  imageHref: 'https://21sid.co.uk/',
  projectTitle: '21 Sid (ongoing)',
  projectParagraph:
    'Currently creating a new website and a mobile app for a small business based in East London.',
  firstIconHref: 'https://github.com/mickeymarse/21-sid-website',
  secondIconHref: 'https://github.com/mickeymarse/21-sid-app',
};
---

<ProjectsLayout
  imageHref={layoutProps.imageHref}
  projectTitle={layoutProps.projectTitle}
  projectParagraph={layoutProps.projectParagraph}
  firstIconHref={layoutProps.firstIconHref}
>
  <Image
    slot='project-image'
    src={sid}
    alt='Screenshot of a branding picture for a London cafe. It depicts a menu, a coffe cup, a receipt, a loyalty card and food wrapping paper, all branded.'
    class='image-style'
  />
  <Icon
    slot='first-icon'
    name='simple-icons:github'
    title='Neon pink version of the Github logo.'
    class='icon-style'
  />
  <Icon
    slot='second-icon'
    name='simple-icons:github'
    title='Neon pink version of the Github logo.'
    class='icon-style'
  />
</ProjectsLayout>
