---
import ProjectsLayout from '../../layouts/ProjectsLayout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import socs from '../../../public/SOCS.png';

const layoutProps = {
  imageHref: 'https://socs-ui.onrender.com/',
  projectTitle: 'SOCS',
  projectParagraph:
    'SOCS help organise and access all the resources shared daily by the School of Code coaches during the bootcamp.',
  firstIconHref: 'https://github.com/mickeymarse/SOCS-App-FE',
  secondIconHref: 'https://github.com/mickeymarse/SOCS-App-BE',
  thirdIconHref: 'https://youtu.be/mxEHmPxkqgc',
};
---

<ProjectsLayout
  imageHref={layoutProps.imageHref}
  projectTitle={layoutProps.projectTitle}
  projectParagraph={layoutProps.projectParagraph}
  firstIconHref={layoutProps.firstIconHref}
  secondIconHref={layoutProps.secondIconHref}
  thirdIconHref={layoutProps.thirdIconHref}
>
  <Image
    slot='project-image'
    src={socs}
    alt='Screenshot of the landing page of the SOCS app as well as a one of its pages on a gradient pink background.'
    class='image-style'
  />
  <Icon
    slot='first-icon'
    name='simple-icons:github'
    title='Neon pink version of the Github logo.'
    class='icon-style'
  />
  <Icon
    slot='second-icon'
    name='simple-icons:github'
    title='Neon pink version of the Github logo.'
    class='icon-style'
  />
  <Icon
    slot='third-icon'
    name='simple-icons:youtube'
    title='Neon pink version of the Youtube logo.'
    class='icon-style'
  />
</ProjectsLayout>
